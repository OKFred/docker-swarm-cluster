{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "skipLibCheck": true,
        "noUncheckedSideEffectImports": true,
        "resolveJsonModule": true,
        "lib": ["ESNext", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "tsc-alias": {
        "verbose": true,
        "resolveFullPaths": true
    }
}
